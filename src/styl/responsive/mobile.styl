.drop-shadow
  box-shadow: 1px 1px 4px 0px rgba(0, 0, 0, 0.15)

#header
  z-index: 500
  background: $color-white

#main-content
  @extend .drop-shadow
  position: relative
  z-index: 100

#footer
  background: $color-white

#background-canvas
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: -1
  opacity: 0.4

.black-title
  @extend .drop-shadow
  background: $color-black
  color: $color-white
